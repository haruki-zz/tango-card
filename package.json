{
  "name": "tango-card",
  "version": "1.0.0",
  "description": "Modern Electron + React vocabulary desktop app for Japanese learners.",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "run-p dev:renderer dev:main",
    "dev:renderer": "vite dev --mode development --host --port 5173 --clearScreen false",
    "dev:main": "wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron scripts/electron-dev.js",
    "build": "run-s build:clean build:main build:preload build:renderer",
    "build:clean": "rimraf dist",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "test": "vitest run",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings=0",
    "format": "prettier \"**/*.{ts,tsx,js,jsx,json,css,md}\" --write",
    "e2e": "playwright test",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haruki-zz/tango-card.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/haruki-zz/tango-card/issues"
  },
  "homepage": "https://github.com/haruki-zz/tango-card#readme",
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "drizzle-orm": "^0.45.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitejs/plugin-react": "^5.1.2",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "wait-on": "^9.0.3"
  }
}
