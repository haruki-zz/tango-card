{
  "name": "tango-card",
  "version": "0.1.0",
  "description": "Electron + React + TypeScript flashcard app for Japanese vocabulary.",
  "main": "dist/main/main_process/app_entry.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "concurrently -k \"npm:dev:main\" \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:main": "tsc --project tsconfig.node.json --watch",
    "dev:renderer": "vite",
    "dev:electron": "wait-on dist/main/main_process/app_entry.js http://localhost:5173 && cross-env TANGO_CARD_DATA_DIR=./data VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc --project tsconfig.node.json",
    "build:renderer": "vite build",
    "preview": "vite preview --outDir dist/renderer --port 4173 --host 127.0.0.1 --strictPort",
    "typecheck": "tsc --project tsconfig.node.json --noEmit && tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"{src,tests,docs}/**/*.{ts,tsx,md}\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "npm run build && playwright test --project=chromium-ui",
    "release": "npm run typecheck && npm run lint && npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haruki-zz/tango-card.git"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "japanese",
    "flashcards"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/haruki-zz/tango-card/issues"
  },
  "homepage": "https://github.com/haruki-zz/tango-card#readme",
  "dependencies": {
    "jszip": "^3.10.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.4.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.16",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "wait-on": "^9.0.1"
  }
}
