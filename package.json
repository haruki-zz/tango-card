{
  "name": "tango-card",
  "version": "1.0.0",
  "description": "Modern Electron + React vocabulary desktop app for Japanese learners.",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "run-p dev:renderer dev:main",
    "dev:renderer": "vite dev --mode development --host --port 5173 --clearScreen false",
    "dev:main": "wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron scripts/electron-dev.js",
    "build": "run-s build:clean build:main build:preload build:renderer",
    "build:clean": "rimraf dist",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "test": "echo \"No tests yet\"",
    "lint": "echo \"Lint not configured\"",
    "e2e": "echo \"E2E tests not configured\"",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haruki-zz/tango-card.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/haruki-zz/tango-card/issues"
  },
  "homepage": "https://github.com/haruki-zz/tango-card#readme",
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "wait-on": "^9.0.3"
  }
}
