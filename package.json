{
  "name": "tango-card",
  "version": "0.1.0",
  "description": "Japanese vocabulary desktop app built with Electron and React",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite dev --config renderer/vite.config.ts",
    "dev:electron": "cross-env NODE_ENV=development TS_NODE_PROJECT=electron/tsconfig.json electron electron/dev-runner.js",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build --config renderer/vite.config.ts",
    "build:electron": "tsc -p electron/tsconfig.json",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "test": "vitest run",
    "dist": "npm run build && electron-builder",
    "clean": "rimraf dist dist-electron release"
  },
  "dependencies": {
    "electron": "^31.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@testing-library/jest-dom": "^6.4.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron-builder": "^25.1.8",
    "eslint": "^9.12.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.6",
    "vitest": "^2.1.3"
  },
  "build": {
    "appId": "com.haruki.tango-card",
    "productName": "TangoCard",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
